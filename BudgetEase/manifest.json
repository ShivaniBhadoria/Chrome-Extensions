{
    "manifest_version": 3,
    "name": "BudgetEase",
    "version": "1.0",
    "description": "Track your overall spending effortlessly with BudgetEase, your personal budget manager.",
    "icons": {
        "128": "assets/money128.png",
        "48": "assets/money48.png",
        "16": "assets/money16.png"
    },
    "action": {
        "default_icon": "assets/money16.png",
        "default_popup": "popup.html"
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]

}
